<Window x:Class="Quizzify.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizzify.View"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="500" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Border Margin="5" Padding="15">
            <StackPanel>
                <TextBlock x:Name="AuthorizationHeaderTextBlockResources" FontSize="30" FontWeight="Bold" Margin="0,0,0,20" Text="Authorization"/>

                <TextBlock x:Name="LoginTextBlockResources" Text="Login" Height="30"/>
                <TextBox x:Name="LoginTextBox" Height="30"/>

                <TextBlock x:Name="PasswordTextBlockResources" Text="Password" Height="30"/>
                <PasswordBox x:Name="PasswordBox" Height="30"/>

                <Button x:Name="AuthorizationButtonResources" Content="Sign in" Margin="0,20"/>

                <TextBlock x:Name="ExistingAccountTextBlockResources" Text="No Account?" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
